<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                x:Class="AudioManagerSample.VolumePage"
                xmlns:local="clr-namespace:AudioManagerSample"
                Title="Volume Setting">

    <ContentPage.BindingContext>
        <local:VolumePageViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Slider">
                <Setter Property="Maximum" Value="15"/>
            </Style>
            <Style TargetType="Label">
                <Setter Property="HorizontalTextAlignment" Value="Start"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout Margin="10" Padding="20">

            <StackLayout Orientation="Horizontal">
                <Label Text="System level: " FontSize="Large" Margin="0, 20, 0, 0"/>
                <Label Text="{Binding SystemLabel}" FontSize="Large" Margin="0, 20, 0, 0"/>
            </StackLayout>
            <Slider x:Name="systemSlider" ValueChanged="OnSliderValueChanged" Value="{Binding SystemLabel}"/>

            <StackLayout Orientation="Horizontal">
                <Label Text="Media level: " FontSize="Large" Margin="0, 20, 0, 0"/>
                <Label Text="{Binding MediaLabel}" FontSize="Large" Margin="0, 20, 0, 0"/>
            </StackLayout>
            <Slider x:Name="mediaSlider" ValueChanged="OnSliderValueChanged" Value="{Binding MediaLabel}"/>

            <StackLayout Orientation="Horizontal">
                <Label Text="Notification level: " FontSize="Large" Margin="0, 20, 0, 0"/>
                <Label Text="{Binding NotificationLabel}" FontSize="Large" Margin="0, 20, 0, 0"/>
            </StackLayout>
            <Slider x:Name="notificationSlider" ValueChanged="OnSliderValueChanged" Value="{Binding NotificationLabel}"/>

            <StackLayout Orientation="Horizontal">
                <Label Text="Alarm level: " FontSize="Large" Margin="0, 20, 0, 0"/>
                <Label Text="{Binding AlarmLabel}" FontSize="Large" Margin="0, 20, 0, 0"/>
            </StackLayout>
            <Slider x:Name="alarmSlider" ValueChanged="OnSliderValueChanged" Value="{Binding AlarmLabel}"/>

            <StackLayout Orientation="Horizontal">
                <Label Text="Voice level: " FontSize="Large" Margin="0, 20, 0, 0"/>
                <Label Text="{Binding VoiceLabel}" FontSize="Large" Margin="0, 20, 0, 0"/>
            </StackLayout>
            <Slider x:Name="voiceSlider" ValueChanged="OnSliderValueChanged" Value="{Binding VoiceLabel}"/>

            <StackLayout Orientation="Horizontal">
                <Label Text="Ringtone level: " FontSize="Large" Margin="0, 20, 0, 0"/>
                <Label Text="{Binding RingtoneLabel}" FontSize="Large" Margin="0, 20, 0, 0"/>
            </StackLayout>
            <Slider x:Name="ringtoneSlider" ValueChanged="OnSliderValueChanged" Value="{Binding RingtoneLabel}"/>

            <Label Text="{Binding ChangedVolumeLabel}" FontSize="Large" Margin="0, 20, 0, 0" HorizontalTextAlignment="Center"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>